
# Set the Controller variables
. /ControllerV8/setParams

# Java environment variables
export JAVA_OPTS="-Xms256m -Xmx2g -XX:MaxPermSize=256m -XX:MaxPermSize=512m"

#Paths
SERVER=${HOME}/server
CONTROLLER_BIN=${SERVER}/extension-projects/ttc/config/bin


# Commands for controlling the server

function start {
        (cd ${SERVER}/tomcat/bin; ./startup.sh)
}

function stop {
        (cd ${SERVER}/tomcat/bin; ./shutdown.sh)
}

function log {
        tail -f ${SERVER}/tomcat/logs/catalina.out
}

function runJenkins {
	${CONTROLLER_BIN}/runJenkins
}


# Optional nice stuff

set -o vi

PS1="[\u@\h \W]\$ "

function l { ls -l "$@"; }
function lr { ls -ltr "$@"; }
function la { ls -la "$@"; }
function j { jobs -l "$@"; }
function launchControl { ${CONTROLLER_BIN}/checkLaunchpad.sh "$@"; }

